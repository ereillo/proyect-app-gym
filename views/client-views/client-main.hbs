<div>
   
   <div>
  <img src="{{user.profilePic}}" class="card-img-top" alt="image-perfil" width="50px">
  <h2 class="card-title">Hola, {{user.name}} ¡bienvenid@!</h2>

  <a href="/client/edit-profile" class="btn btn-primary">Editar perfil</a>

  {{#if suscriptionTrue}}

    <p>Tu suscripción está activa</p>
    <form action="/client/main/" method="post">
      <button class="btn btn-primary btn-lg">Darse de baja</button>
      <input
        type="text"
        name="suscription"
        value="true"
        style="display: none;"
      />
    </form>

</div>

    <form action="/client/main/comment" method="post">
      <input
        type="text"
        name="userName"
        value="{{user.name}}"
        style="display: none;"
      />
      <label for="comment">¿Quieres dejarnos algún comentario?</label>
      <input type="text" name="comment" />
      <button>Enviar comentario</button>

      {{#if commentSucces}}
        {{commentSucces}}
      {{/if}}
    </form>

    <a href="/client/calendar"><button>Apúntate a una clase</button> </a>

<div class="card" style="width: 18rem;">
    <h3>Estas son tus clases</h3>
    {{#each classInfo}}
      <ul class="list-group list-group-flush"></ul>
      <li class="list-group-item">{{className}}</li>
      <li class="list-group-item">{{weekDay}}</li>
      <form action="/client/main/{{_id}}" method="post">

        <button>Borrate de una clase</button>
        <input
          type="text"
          name="students"
          value="{{students}}"
          style="display:none;"
        />

      </form>

    {{/each}}

  {{/if}}
   </div>

  {{#unless suscriptionTrue}}
    <form action="/client/main/" method="post">
      <p>Tu suscripción está inactiva</p>
      <button class="link-danger">Suscríbete</button>
      <input
        type="text"
        name="suscription"
        value="false"
        style="display: none;"
      />
    </form>
  {{/unless}}

</div>