<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>

    <nav>
      <a href="/">Inicio</a>
      <a href="/client/classes">Nuestras Clases</a>
      <a href="/client/teachers">Nuestros Profresores</a>
      {{#if isUserNotLoggedIn}}
        <a href="/auth/signup">Regístrate</a>
        <a href="/auth/login">Accede</a>
      {{/if}}
      {{#if isUserClient}}
        <a href="/client/main">Area Personal</a>
        <a href="/client/calendar">Calendario</a>
        <a href="/auth/logout">Cerrar sesión</a>
      {{/if}}

      {{#if isUserTeacher}}
        <a href="/teachers/main">Area Personal</a>
        <a href="/client/calendar">Calendario</a>
        <a href="/auth/logout">Cerrar sesión</a>
      {{/if}}

      {{#if isUserAdmin}}
        <a href="/admin/main">Area Personal</a>
        <a href="/client/calendar">Calendario</a>
        <a href="/auth/logout">Cerrar sesión</a>
      {{/if}}

    </nav>

    {{{body}}}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="/js/script.js"></script>
