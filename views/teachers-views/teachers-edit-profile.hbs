<div >

<div class="d-flex flex-wrap">

  <form action="/teachers/edit-profile-img" method="post" enctype="multipart/form-data">
    <div class="card" style="width: 20rem">
      <img src="{{teacherId.profilePic}}" class="card-img-top" alt="image-pic" style="width: 20rem;">
      <div class="card-body">
        <h5 class="card-title">Tu foto de perfil</h5>
        <input type="file" class="form-control" name="userProfilePic">
        <button class="btn btn-outline-primary">Agregar foto</button>
      </div>
    </div>
  </form>



  <div class="d-flex justify-content-center">
    <form action="/teachers/edit-profile" method="post">

      <br>
      <div class="mb-3">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" name="name" value="{{teacherId.name}}"
          style="width : 220px; heigth : 2px" />
      </div>


      <br>

      <div class="mb-3">
        <label for="email" class="form-label">Apellido</label>
        <input type="text" class="form-control" name="surname" value="{{teacherId.surname}}"
          style="width : 220px; heigth : 2px" />
      </div>

      <br>

      <div class="mb-3 ">
        <label for="email" class="form-label">Correo electrónico</label>
        <input type="text" class="form-control" name="email" value="{{teacherId.email}}"
          style="width : 220px; heigth : 2px" />
      </div>
      <br>
  </div>

  <div>
    <h5>Cambiar contraseña</h5>

    <br>

    <label for="newPassword">Nueva contraseña</label>
    <input type="password" class="form-control" name="newPassword" style="width : 220px; heigth : 2px" />

    <br>

    <label for="confirmPassword">Confirmar nueva contraseña</label>
    <input type="password" class="form-control" name="confirmNewPassword" style="width : 220px; heigth : 2px" />

  </div>
  <br>

  <div>
    </p><label for="password">Contraseña actual para realizar cambios</label>
    <input type="password" class="form-control" name="password" style="width : 280px; heigth : 2px" />
    <br>
    <button class="btn btn-outline-primary">Actualizar perfil</button>
  </div>


  <br />

  {{#if this.errorMessage}}
  <p>{{this.errorMessage}}</p>
  {{/if}}

  </form>
</div>
</div>