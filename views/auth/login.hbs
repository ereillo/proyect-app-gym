<div>

  <h3>Vista del login</h3>

  <form action="/auth/login" method="post">

    <label for="email">Email</label>
    <input type="text" name="email" value="{{previousEmail}}" />

    <br />

    <label for="password">Contraseña</label>
    <input type="password" name="password" />

    <br />

    <button>Accede</button>
    <br />

    <a href="/auth/signup">¿Aun no eres usuario? Registrate</a>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}

  </form>

</div>