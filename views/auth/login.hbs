<div class="d-flex justify-content-center">

  <form action="/auth/login" method="post" style="margin-top: 10%;">


    <div class="mb-3" style="margin: -1.5%; margin-left: 3%; ">
    <label for="email" class="form-label">Correo electrónico</label>
    <input type="text"  class="form-control" name="email" value="{{previousEmail}}"style="width : 220px; heigth : 2px"/>
    </div>

    <br />

    <div class="mb-3" style="margin: -1.5%; margin-left: 3%; ">
    <label for="password" class="form-label">Contraseña</label>
    <input type="password" class="form-control" name="password"style="width : 220px; heigth : 2px" />
    </div>

    <br />

    <div class="d-grid gap-2" style="margin: -1.5%; margin-left: 3%;">
    <button class="btn btn-primary" style="width : 220px; heigth : 2px">Accede</button>
    </div>

    <br />

    <div style="margin: -3%; margin-top: 2%; margin-left: 3%;">
    <a href="/auth/signup">¿Aun no eres usuario? Registrate</a>
    </div>

    <div style="margin: -3%; margin-top: 2%">
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
    </div>

  </form>

</div>